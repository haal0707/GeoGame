@model QuizModel

<h2>World Flag Quiz, insert the correct country!</h2>


@using (Html.BeginForm("StartQuiz", "Quiz", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Question)
    @Html.HiddenFor(m => m.CorrectAnswer)

    <img src="https://flagsapi.com/@Model.CountryCode/shiny/64.png">
    
    <input type="text" name="UserAnswer" required />
    <input type="hidden" name="quizType" value="World flags" />
    <input type="submit" value="Submit" />
}

<p>Correct answers: @Model.AnsweredCorrectly</p>